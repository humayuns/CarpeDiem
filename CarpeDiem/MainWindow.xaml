<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Carpe Diem" Height="250" Width="525" Loaded="Window_Loaded" MouseDown="Window_MouseDown" Icon="ClearD-A.ico">
    <Grid>
        <ProgressBar x:Name="Progressbar1" HorizontalAlignment="Left" Height="28" Margin="65,117,0,0" VerticalAlignment="Top" Width="439"/>
        <TextBox x:Name="textBoxHours" HorizontalAlignment="Left" Height="23" Margin="54,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="28"/>
        <Button x:Name="button" Content="Start Day" HorizontalAlignment="Left" Margin="7,182,0,0" VerticalAlignment="Top" Width="75" Background="#FF0CA83E"/>
        <Label x:Name="label" Content="Hours" HorizontalAlignment="Left" Margin="7,86,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelTarget" Content="Target" HorizontalAlignment="Left" Margin="115,86,0,0" VerticalAlignment="Top"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="404,10,0,0" VerticalAlignment="Top" Width="100" Source="John-Keating.jpg"/>
        <Label x:Name="labelTitle" Content="Carpe Diem" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24" Width="349" Foreground="#FFF10000" FontStyle="Italic"/>
        <Label x:Name="labelHoursLeft" Content="00" HorizontalAlignment="Left" Margin="87,86,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonSprite" Content="Sprite" HorizontalAlignment="Left" Margin="87,182,0,0" VerticalAlignment="Top" Width="75" Background="#FF4AC8EE"/>
        <ProgressBar x:Name="ProgressbarFood" HorizontalAlignment="Left" Height="19" Margin="65,150,0,0" VerticalAlignment="Top" Width="439" Background="#FFBD2E2E" Foreground="#FFF3EA1C" Value="100"/>
        <Button x:Name="buttonFood" Content="Food" HorizontalAlignment="Left" Margin="167,182,0,0" VerticalAlignment="Top" Width="75" Background="#FFF19E26"/>
        <Button x:Name="buttonClock" Content="Clock" HorizontalAlignment="Left" Margin="247,182,0,0" VerticalAlignment="Top" Width="75" Background="#FF269EF1"/>
        <Image x:Name="image_Copy" HorizontalAlignment="Left" Height="52" Margin="10,117,0,0" VerticalAlignment="Top" Width="50" Source="User.png"/>
        <Button x:Name="buttonClose" Content="Close" HorizontalAlignment="Left" Margin="327,182,0,0" VerticalAlignment="Top" Width="75" Background="#FFF15D26"/>

    </Grid>
</Window>
