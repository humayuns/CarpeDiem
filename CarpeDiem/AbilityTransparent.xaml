        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarpeDiem"
        mc:Ignorable="d"
        Title="AbilityTransparent" Height="110" Width="100" AllowsTransparency="True" WindowStyle="None" MouseDown="Window_MouseDown" Background="{x:Null}">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="Images/artifact_epic.png"/>
        <ProgressBar HorizontalAlignment="Left" Height="10" Margin="0,100,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
